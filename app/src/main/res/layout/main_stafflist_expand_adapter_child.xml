<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_stafflist_user_image_civ"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/main_stafflist_name_textview"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:gravity="center|left"
        android:layout_margin="5dp" />
    <TextView
        android:id="@+id/main_stafflist_post_tv"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#228b22"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center|left"
        android:layout_marginLeft="8dp">
        <TextView
            android:id="@+id/main_stafflist_pn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d2d2d2"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/main_stafflist_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d2d2d2"
            android:textSize="12dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/main_stafflist_state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="#c0c0c0"/>
</LinearLayout>