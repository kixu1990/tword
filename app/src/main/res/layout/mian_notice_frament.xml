<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_notice_fmt_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.cardview.widget.CardView
        android:id="@+id/main_notice_cv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#E6E6E6"
            android:text="新建公告"
            android:textColor="#000"
            android:layout_marginBottom="5dp"
            android:textSize="16dp"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/main_notice_add_title_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:background="@drawable/edit_notice_comment_background"/>
        <EditText
            android:id="@+id/main_notice_add_startline_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_notice_comment_background"
            android:layout_margin="5dp"
            android:textSize="14dp"
            android:minWidth="80dp" />
        <EditText
            android:id="@+id/main_notice_add_content_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_notice_comment_background"
            android:textSize="12dp"
            android:text="\n\n\n\n\n\n\n\n"
            android:layout_margin="5dp"
            android:minLines="8" />
        <EditText
            android:id="@+id/main_notice_add_signature_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:textSize="14dp"
            android:background="@drawable/edit_notice_comment_background" />
        <TextView
            android:id="@+id/main_notice_add_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:text="2020-4-10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="5dp"
            android:background="#d3d3d3">
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="成员："/>
                <TextView
                    android:id="@+id/main_notice_add_allpercent_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:text="12/50"
                    />
                <TextView
                    android:id="@+id/main_notice_add_allselect_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:text="全员" />
            </LinearLayout>
            <com.example.tword.customui.MyExpandableListView
                android:id="@+id/main_notice_fmt_elv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
  <LinearLayout
        android:id="@+id/main_notice_addnotice_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/main_notice_closeadd_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="20dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFB6C1"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="取消"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/mian_notice_putadd_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="20dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#98FB98"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="发布"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
