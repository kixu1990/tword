<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/erp_color_toolbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#87CEEB"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#87CEEB">
    <TextView
        android:id="@+id/erp_color_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:text="SP001 - 织机"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/erp_color_color_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text=""/>
        <TextView
            android:id="@+id/erp_color_size_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="尺码"/>
        <TextView
            android:id="@+id/erp_color_todayproduction_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="今天完成"/>
        <TextView
            android:id="@+id/erp_color_production_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#000"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="已完成"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/erp_color_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>